<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ghimire.swagat.merivaleapp.MainActivity"
    tools:showIn="@layout/app_bar_main"
    android:background="#FF0099CC">

    <ImageView
        android:id="@+id/dayImg"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/day_1"/>
    <TextView
        style="@style/timeFont"
        android:id="@+id/date"
        android:layout_toEndOf="@id/dayImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Tue, "/>
    <TextView
        style="@style/timeFont"
        android:id="@+id/time"
        android:layout_below="@id/date"
        android:layout_toEndOf="@id/dayImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:text="Aug "/>


    <ImageView
        android:id="@+id/weatherImg"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_below="@+id/dayImg"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:src="@drawable/day_1"/>
    <TextView
        style="@style/timeFont"
        android:id="@+id/weatherType"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/dayImg"
        android:layout_below="@id/dayImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:text="Tue, "/>
    <TextView
        style="@style/timeFont"
        android:id="@+id/temperature"
        android:layout_below="@id/weatherType"
        android:layout_toEndOf="@id/dayImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="40dp"
        android:text="Aug "/>
